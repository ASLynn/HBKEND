@using HeyDoc.Web;


<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="#">Settings</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-gears fa-lg"></i>
                    <span>Platform Earnings</span>
                </div>
                <div class="box-icons">
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div class="row">
                    <div class="form-group col-sm-6">
                        @Html.Label("Platform Percent", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-4">
                            <input type="Number" min="0" max="100" class="form-control" id="percent" value="@ViewBag.CutPercent" />
                        </div>
                        <div class="col-sm-2">
                            <input type="button" class="btn btn-primary" id="savePercent" value="Save" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-gears fa-lg"></i>
                    <span>Promotion Url</span>
                </div>
                <div class="box-icons">
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div class="row">
                    <div class="form-group col-sm-12">
                        @Html.Label("Promotion Url", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="promoUrl" value="@ViewBag.PromotionUrl" />
                        </div>
                        <div class="col-sm-2">
                            <input type="button" class="btn btn-primary" id="saveUrl" value="Save" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript">
        LoadSettingsIndexScripts();
    </script>
}