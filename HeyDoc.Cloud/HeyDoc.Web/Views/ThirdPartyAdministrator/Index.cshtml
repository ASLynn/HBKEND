@using HeyDoc.Web;

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="#">Third Party Administrators</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-plus-square"></i>
                    <span>TPA List</span>
                </div>
                <div class="box-icons">
                    <a href="/ThirdPartyAdministrator/Add" title="Add New TPA">
                        <i class="fa fa-plus"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div class="row">
                    <div class="form-group col-sm-3 ">
                        @Html.Label("Supplying Pharmacy", new { @class = "control-label" })
                        @Html.DropDownList("pharmacy", ViewBag.Pharmacies as IEnumerable<SelectListItem>, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-sm-3">
                        <br />
                        <button class="btn btn-primary" id="search" type="submit">Search</button>
                    </div>
                </div>
                <!-- Table -->
                <table id="tpaList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>TPA</th>
                            <th>Supplying Pharmacies</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th>No</th>
                            <th>TPA</th>
                            <th>Supplying Pharmacies</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        LoadTPAList();
    </script>
}