@model  List<HeyDoc.Web.Models.DoctorModel>
@using HeyDoc.Web;
<link href="~/Content/magnific-popup.css" rel="stylesheet" />
<link href="~/Scripts/devoops-master/plugins/jquery-ui/jquery-ui.css" rel="stylesheet" />
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="#">Health Care Professionals </a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-user-md"></i>
                    <span>HCP List</span>
                </div>
                <div class="box-icons">
                    <a href="/Doctor/Create" title="Add new doctor">
                        <i class="fa fa-user-plus "></i></a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div class="row">
                    <div class="form-group col-sm-2">
                        @Html.Label("Show doctors", new { @class = "control-label" })
                        <select class="form-control ddl_hcp" id="ddl_doctor">
                            <option value="all">All</option>
                            <option value="verified">Verifed</option>
                            <option value="unverified">Unverified</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.Label("Show Categories", new { @class = "control-label" })
                        @Html.DropDownList("category", ViewBag.Categories as IEnumerable<SelectListItem>, new { @class = "form-control ddl_hcp", @id = "ddl_category" })
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.Label("Groups", new { @class = "control-label" })
                        <select class="form-control ddl_hcp" id="ddl_group">
                            <option value="-1">All</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.Label("Companies", new { @class = "control-label" })
                        @Html.DropDownList("companies", ViewBag.Companies as IEnumerable<SelectListItem>, new { @class = "form-control ddl_hcp", @id = "ddl_companies" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-11 col-sm-offset-1">
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            @Html.Label("Search Doctor", new { @class = "col-sm-3 control-label", @style="padding-left: 0 !important;" })
                            <div class="col-sm-8" style="padding-left: 0 !important;">
                                @Html.TextBox("searchName", ViewBag.FilterValue as string, new { @class = "form-control", @placeholder = "Name / Email" })
                            </div>
                        </div>
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            <input type="submit" id="searchBtn" value="Search" class="btn btn-primary" onclick="Load();" />
                        </div>
                    </div>
                </div>
                <!-- Table -->
                <table id="doctorList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Rank</th>
                            <th>Name</th>
                            <th>Created on</th>
                            <th>Gender</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Rank</th>
                            <th>Name</th>
                            <th>Created on</th>
                            <th>Gender</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

