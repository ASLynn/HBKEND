@model HeyDoc.Web.Models.OTPverifyModel

@{
    Layout = "_ChangePasswordLayout.cshtml";
}
<div class="row custom-background">
    <div class="col-lg-6 col-lg-offset-3 text-center">
        <div class=" col-md-12">
            <div class="box" style="margin-top:6%;border-radius:3px;">
                <div class="box-content" style="background-color:#fff;opacity:0.95;">
                    @using (Html.BeginForm(null, null, FormMethod.Get, new { onsubmit = "return validateForm()" }))
                    {
                        @Html.AntiForgeryToken()

                        <div style="text-align:center;font-family:Helvetica;color:#558ED5;font-size:30px;margin-top:2rem;">HOPE OTP Resend</div>
                        <br />

                        <div class="row" style="text-align:center; color:red">
                            @ViewBag.message @if (ViewBag.message == "OTP resend successful. Please click here to ")
                            {<a href='https://app.hope.com.mm/account/otpverify/'>Verify OTP</a>}

                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-group col-lg-6 ", @placeholder = "Phone Number", @style = "text-align:center;color:#999999" })

                            </div>
                        </div>
                       
                        <br />
                        <div class="row">
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                @if (ViewBag.message == "Please enter register phone number to receive OTP")
                                {
                                    <button type="submit" class="btn btn-lg btn-primary btn-block" style="background-color:#558ED5 ;border-radius:3px; border:2px solid #406EA0 ;">Send</button>
                                }

                            </div>
                        </div>
                      

                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript">




        function validateForm() {
            
            if ($('#OTPCode').val().length != 6) {
                alert("OTP Code must be 6 digit number.");
                return false;
            }

        }
    </script>
}
