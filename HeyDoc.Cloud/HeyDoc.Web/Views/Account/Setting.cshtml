@model HeyDoc.Web.Models.LocalPasswordModel
@using HeyDoc.Web;


<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="/Notification/Create">Setting</a></li>
        </ol>
    </div>
</div>

<div class="row" id="msgCreate">
    <div class="col-xs-12 col-sm-12">
        <div class="box ui-draggable ui-droppable">
            <div class="box-header">
                <div class="box-name ui-draggable-handle">
                    <i class="fa fa-cog"></i>
                    <span></span>
                </div>
                <div class="box-icons">
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content" id="setPassword">
                @using (Html.BeginForm("Setting", "Account"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
    
                    <div class="form-group">
                        @Html.LabelFor(model => model.OldPassword, new { @class = "col-md-3 control-label", id = "text" })
                        <div class="col-md-9">
                            @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OldPassword)
                        </div>
                    </div>
    
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword, new { @class = "col-md-3 control-label", id = "text" })
                        <div class="col-md-9">
                            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NewPassword)
                        </div>
                    </div>
    
                    <div class="form-group">
                        @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-3 control-label", id = "text" })
                        <div class="col-md-9">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                    </div>
                            
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-7 col-md-offset-2">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-pencil-square-o"></i>Update</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        {
            $('document').ready(function () {
                // Load set password form validation
                LoadBootstrapValidatorScript(PasswordValidator);
            });
        }
    </script>
}