@using HeyDoc.Web;

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="#">Groups</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-users fa-lg"></i>
                    <span>Group List</span>
                </div>
               <div class="box-icons">
                    <a href="Create" title="Add new group" id="addNew">
                        <i class="fa fa-plus "></i></a>  
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">

                <div class="row">                   
                    <div class="form-group col-sm-3 col-sm-offset-1">
                        @Html.Label("Category", new { @class = "control-label" })
                        @Html.DropDownList("category", ViewBag.Categories as IEnumerable<SelectListItem>, new { @class = "form-control ddl_hcp", @id = "ddl_category" })
                    </div>
                </div>

                <!-- Table -->
                <table id="groupList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Platform Cut (%)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                           <th>No</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Platform Cut (%)</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        LoadGroupIndexScripts();
    </script>
}