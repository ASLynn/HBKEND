@model  List<HeyDoc.Web.Models.MedicationModel>
@using HeyDoc.Web;

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="#">Medication</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-medkit"></i>
                    <span>Medication List</span>
                </div>
                <div class="box-icons">
                    <a href="/Medication/Add" title="Add new Medication">
                        <i class="fa fa-plus"></i></a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div class="row">
                    <div class="form-group col-sm-11 col-sm-offset-1">
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            @Html.Label("Search Medication", new { @class = "col-sm-4 control-label", @style="padding-left: 0 !important;" })
                            <div class="col-sm-8" style="padding-left: 0 !important;">
                                @Html.TextBox("searchName", ViewBag.FilterValue as string, new { @class = "form-control", @placeholder = "Medication Name" })
                            </div>
                        </div>
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            <input type="submit" id="searchBtn" value="Search" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <!-- Table -->
                <table id="medList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Created Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Created Date</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        LoadMedicationIndexScripts();
    </script>
}