@using HeyDoc.Web;

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="#">Corporate</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-plus-square"></i>
                    <span>Corporate List</span>
                </div>
                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="box-icons">
                        <a href="/Corporate/Create" title="Add new Corporate">
                            <i class="fa fa-user-plus"></i>
                        </a>
                    </div>
                }

                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <div class="row">
                    <div class="form-group col-sm-11 col-sm-offset-1">
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            @Html.Label("Search Corporate", new { @class = "col-sm-3 control-label", @style = "padding-left: 0 !important;" })
                            <div class="col-sm-8" style="padding-left: 0 !important;">
                                @Html.TextBox("searchName", ViewBag.FilterValue as string, new { @class = "form-control", @placeholder = "Corporate Name" })
                            </div>
                        </div>
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            <button class="btn btn-primary" id="search" type="button">Search</button>
                        </div>
                        <div class="col-sm-6" style="padding-left: 0 !important;">
                            @Html.Label("TPA", new { @class = "col-sm-3 control-label", @style = "padding-left: 0 !important;" })
                            <div class="col-sm-8" style="padding-left: 0 !important;">
                                @Html.DropDownList("tpa", ViewBag.TPAs as List<SelectListItem>, new { @class = "form-control", @placeholder = "Corporate Name" })
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Table -->
                <table id="codeList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>No</th>
                            <th>Corporate</th>
                            <th>Created Date</th>
                            <th>TPA/Insurance Provider</th>
                            <th>Supplying Pharmacies</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>No</th>
                            <th>Corporate</th>
                            <th>Created Date</th>
                            <th>TPA/Insurance Provider</th>
                            <th>Supplying Pharmacies</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script type="text/javascript">
        loadCorporateList();
    </script>
}
