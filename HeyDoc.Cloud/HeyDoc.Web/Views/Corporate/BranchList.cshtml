@model HeyDoc.Web.Models.CorporateModel
@using HeyDoc.Web.Helpers;
@using HeyDoc.Web;

<!-- Menu Links -->
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="/Corporate/Index">Corporate List</a></li>
            <li><a href="#">Branch List</a></li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-user-md"></i>
                    <span>Corporate Info</span>
                </div>
                <div class="box-icons">
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content">

                <div class="card">
                    <h4 class="page-header">
                        @Model.BranchName
                    </h4>
                    <p>
                        <b>Branch Address: </b> @Model.BranchAddress
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-stethoscope fa-lg"></i>
                    <span>Branch List</span>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="box-icons">
                            <a href="/Corporate/CreateBranch?corporateId=@Model.CorporateId" title="Add new Branch">
                                <i class="fa fa-user-plus"></i>
                            </a>
                        </div>
                    }
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">

                <div class="row">
                    <div class="form-group col-sm-3 col-sm-offset-1">
                        @Html.Label("Branch Name", new { @class = "control-label" })
                        <input type="text" id="searchName" class="form-control" />
                    </div>
                    <div class="form-group col-sm-3">
                        <br />
                        <button class="btn btn-primary" id="search" type="button">Search</button>
                    </div>
                </div>

                <!-- Table -->
                <table id="codeList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>No</th>
                            <th>Branch</th>
                            <th>Created Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>No</th>
                            <th>Branch</th>
                            <th>Created Date</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a href="/Corporate/Index">Corporate List</a></li>
            <li><a href="#">Corporate Positions</a></li>
        </ol>
    </div>
</div>




<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-stethoscope fa-lg"></i>
                    <span>Position List</span>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="box-icons">
                            <a href="/Corporate/CreatePosition?corporateId=@Model.CorporateId" title="Add new Position">
                                <i class="fa fa-user-plus"></i>
                            </a>
                        </div>
                    }
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">              

                <!-- Table -->
                <table id="tbl_PositionList" class="table table-bordered table-striped table-hover table-heading table-datatable">
                    <thead>
                        <tr>

                            <th>No</th>
                            <th>Position</th>
                            <th>Active</th>
                            <th>Edit / Delete</th>

                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>

                            <th>No</th>
                            <th>Position</th>
                            <th>Active</th>
                            <th>Edit / Delete</th>

                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
